<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/challengeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/shop_sign" />

    <TextView
        android:id="@+id/dailyChallengeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challengeIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:paddingTop="20dp"
        android:text="DAILY CHALLENGE"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/daily_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyChallengeText"
        android:layout_toLeftOf="@+id/dailyChallenge"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/dailyChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyChallengeText"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="Workout for 30 minutes"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weeklyChallengeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_checkmark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="WEEKLY CHALLENGE"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/weekly_checkmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/weeklyChallengeText"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/weeklyChallenge"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/shop_sign"
        app:srcCompat="@drawable/shop_sign" />

    <TextView
        android:id="@+id/weeklyChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weeklyChallengeText"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="Workout 4 types of muscle"
        android:textSize="18sp" />

</RelativeLayout>