<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivo.gymbuddy.Home">

    <ImageView
        android:id="@+id/iv_body_type"
        android:layout_width="235dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/body_one"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="95dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="95dp" />

    <Button
        android:id="@+id/LogAWorkout"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:text="Log Past Workout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="17dp" />

    <Button
        android:id="@+id/b_viewWorkouts"
        android:layout_width="88dp"
        android:layout_height="58dp"
        android:text="View Workouts"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/ib_startWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="00:00:00"
        android:textSize="32dp"
        android:textColor="@android:color/holo_red_light"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/iv_body_type"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="@+id/LogAWorkout" />

    <ImageButton
        android:id="@+id/ib_pauseWorkout"
        android:clickable="false"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@android:drawable/ic_media_pause"
        app:layout_constraintRight_toLeftOf="@+id/ib_startWorkout"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="50dp" />

    <ImageButton
        android:id="@+id/ib_stopWorkout"
        android:clickable="false"
        android:visibility="invisible"
        android:layout_width="54dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@android:drawable/presence_busy"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/ib_startWorkout"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="51dp" />

</android.support.constraint.ConstraintLayout>